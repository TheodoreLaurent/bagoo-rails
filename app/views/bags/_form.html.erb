<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h1>Add a bag</h1>


      <%= simple_form_for(@bag) do |f| %>
        <%= f.input :title %>
        <%= f.input :category, :collection => ["Travel", "Casual", "Luxury", "Camping" ] %>
        <%= f.input :brand %>
        <%= f.input :capacity %>
        <%= f.input :price_per_day %>
        <%= f.input :description %>
        <%= f.input :datein %>
        <%= f.input :dateout %>
        <%= f.input :photos, as: :attachinary %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>


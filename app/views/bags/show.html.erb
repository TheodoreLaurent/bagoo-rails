<!-- diplays the photos-->
<div class="cover-container text-center">
  <div class="container">
    <div class="cover">
      <div class="bag-cover-photos">
        <% if (defined?(@bag.photos))  %>
        <% @bag.photos.each do |photo| %>
        <%= cl_image_tag photo.path, height: 350, crop: :fill %>
        <% end %>
        <% else %>
        <p>This bag has no photos</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- display the information about the bag -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-2 col-md-8">

      <div class="bag-description">
        <h3>About this bag</h3>
        <p><%= @bag.description %></p>
      </div>

      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>Name</th>
            <td><%= @bag.title %></td>
          </tr>
          <tr>
            <th>Category</th>
            <td><%= @bag.category %></td>
          </tr>
          <tr>
            <th>Brand</th>
            <td><%= @bag.brand %></td>
          </tr>
          <tr>
            <th>Capacity</th>
            <td><%= @bag.capacity %></td>
          </tr>
          <tr>
            <th>Price per day (Â£)</th>
            <td><%= @bag.price_per_day %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- display the review of the booking -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <form class="booking-request" role="form" >
        <h4>Review your booking below:</h4>
<!--
        <div class="form-group text-center">
          <label class="sr-only" for="checkin">From</label>
          <div class="input-group">
            <input type="text" class="form-control" id="checkin" placeholder="from" name="check-in_date">
            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
          </div>
        </div>

        <div class="form-group text-center">
          <label class="sr-only" for="checkout">To</label>
          <div class="input-group">
            <input type="text" class="form-control" id="checkout" placeholder="to" name="check-out_date">
            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
          </div>
        </div>
      -->

      <%= simple_form_for([@bag, @booking]) do |f| %>

      <%= f.input :check_in, as: :string, label: false, input_html:{type: "text", class: "form-control", id: "checkin", placeholder: "from", name: "check-in_date"} %>

      <%= f.input :check_out, as: :string, label: false, id: "checkout-box" , wrapper_html:{}, label_html:{}, input_html:{type:"text", class:"form-control", id:"checkout", placeholder:"to", name:"check-out_date"} %>

      <table class="table">
        <thead>
          <tr><th></th><th></th></tr>
        </thead>
        <tbody>
          <tr>
            <th>Price per day</th>
            <td style = "text-align: right"><%= @bag.price_per_day %></td>
          </tr>
          <tr>
            <th>Number of days</th>
            <td style = "text-align: right" id="nbDays">
            </td>
          </tr>
          <tr>
            <th>Total price</th>
            <td style = "text-align: right" id="total-price"><%= @bag.price_per_day  %></td>
          </tr>
        </table>

        <%= f.button :submit, class: 'btn btn-primary btn-large btn-block' , wrapper_html:{} %>
        <% end %>

      </form>
    </div>
  </div>
</div>

<% content_for :after_js do %>
<script>

  $("form.booking-request input").change(function(){
    console.log('hi');
    if (($("#checkout").datepicker('getDate') != null) && ($("#checkin").datepicker('getDate') != null)){
      var a = $("#checkout").datepicker('getDate').getTime();
      var b = $("#checkin").datepicker('getDate').getTime();
      var c = 24*60*60*1000;
      var diffDays = Math.round(Math.abs((a - b)/(c)));
      $('#nbDays').text(diffDays);
      var price_per_day = <%= @bag.price_per_day %>
      var total_price = diffDays * price_per_day
      $('#total-price').text(total_price)
    }
  });

</script>
<% end %>

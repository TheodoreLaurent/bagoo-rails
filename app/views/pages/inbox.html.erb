
<div class="container">
  <div class="row">
    <div class="col-xs-12">
    <h2>Inbox</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Subject</th>
            <th>From</th>
          </tr>
        </thead>
      <% @conversations.each do |conversation| %>
        <% conversation.receipts.each do |receipt| %>

            <tbody>
              <tr>
                <th><%= conversation.subject %></th>
                <td><%= receipt.notification.sender.email %></td>

                <td><%= link_to "Read", controller: "pages", action: "message_show", id: conversation.id %></td>
              </tr>
            </tbody>

          <% end %>
      <% end %>
      </table>
    </div>
  </div>
</div>




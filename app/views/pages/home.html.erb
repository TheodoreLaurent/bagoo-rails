<!-- BANNER -->
<%= render 'shared/banner' %>
<!-- Your features code -->
<div class="text-center">
  <div class="padded">
    <div class="features">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= image_tag("globe.png") %>
            <h2>Discover the World</h2>
            <p>The earth is your new home</p>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= image_tag("dollar.png") %>
            <h2>Pay Online</h2>
            <p>No cash issues anymore</p>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= image_tag("suitcase.png") %>
            <h2>Rent a bag</h2>
            <p>Pick any bag when you need it</p>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= image_tag("heart.png") %>
            <h2>Share and love</h2>
            <p>Join a community you love</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<br>
<!-- Your cards code -->
<div class="wrapper-grey">
  <div class="text-center">
   <div class="padded">
    <div class="container">
      <h2>Our featured bags</h2>
      <div class="row">

        <% Bag.first(3).each do |bag| %>
        <div class="col-xs-12 col-sm-4">
         <% if bag.photos? %>
         <div class="card"
         style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path bag.photos.first.path, height: 300, width: 400, crop: :fill %>')">
         <% else %>
         <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.pexels.com/photos/24467/pexels-photo-24467.jpg?w=1260&h=750&auto=compress&cs=tinysrgb'); height: 300; width: 400; crop: :fill);">
          <% end %>
          <div class="card-category"></div>
          <div class="card-description">
            <h2> <%= bag.brand %> </h2>
          </div>
          <%= link_to "", bag_path(bag, {checkin: @checkin, checkout: @checkout}), class: "card-link" %>
        </div>
      </div>
      <% end %>
    </div>

  <!-- MAIN MAP -->
<%= render 'bags/map_box', hash_markers: @hash %>

<!--  -->

  </div>
</div>
</div>
</div>
</div>


<br>
